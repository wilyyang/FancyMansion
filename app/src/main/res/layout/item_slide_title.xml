<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_item"
    android:weightSum="10"
    android:background="@drawable/divider_bottom_light">

    <TextView
        android:id="@+id/tvNavSlideType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_type_ending"
        android:padding="5dp"
        android:text="@string/slide_type_normal"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/size_small"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:layout_marginStart="@dimen/margin_default">

        <TextView
            android:id="@+id/tvItemId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/book_id"
            android:textSize="@dimen/size_book_id"/>

        <TextView
            android:id="@+id/tvItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_item"/>
    </LinearLayout>

</LinearLayout>
