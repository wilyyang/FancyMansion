<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/padding_default"
    android:background="@drawable/divider_bottom"
    android:foreground="@drawable/fg_bottom_selector"
    android:paddingVertical="@dimen/padding_book">

    <ImageView
        android:id="@+id/imageCover"
        android:background="@drawable/bg_round_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_book_start">

        <TextView
            android:id="@+id/tvStoreBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_item"
            android:textStyle="bold"
            android:text="타이틀"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tvStoreBookUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_book_item_date"
            android:text="2021 10/10 15:16"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>