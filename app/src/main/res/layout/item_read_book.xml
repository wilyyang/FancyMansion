<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/padding_default"
    android:background="@drawable/bg_bottom_selector"
    android:paddingVertical="@dimen/padding_book">

    <ImageView
        android:id="@+id/imageCover"
        android:background="@drawable/bg_round_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_book_start">

        <TextView
            android:id="@+id/tvReadBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_item"
            android:textStyle="bold"
            android:text="타이틀"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tvReadBookUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_book_item_date"
            android:text="2021 10/10 15:16"
            android:ellipsize="end"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_book_item_name"
                android:text="@string/book_config_writer"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvReadBookWriter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:textStyle="bold"
                android:textSize="@dimen/size_book_item_name"
                android:ellipsize="end"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_book_item_name"
                android:text="@string/book_config_illustrator"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvReadBookIllustrator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:textStyle="bold"
                android:textSize="@dimen/size_book_item_name"
                android:ellipsize="end"
                android:singleLine="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvReadBookId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_small"
            android:text="2389g80349g43t"
            android:textSize="@dimen/size_book_id"
            android:textColor="@color/book_id"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>