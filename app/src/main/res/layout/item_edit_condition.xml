<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tv_selector"
    android:layout_margin="@dimen/margin_edit_item"
    android:padding="@dimen/padding_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvConditionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="condition id : #600104426"
            android:textSize="@dimen/size_small_brief_id"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCondition1Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#56441286"
            android:textColor="@color/main_color_1"
            android:textStyle="bold"
            android:textSize="@dimen/size_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cond_text_entries"
            android:layout_marginLeft="@dimen/margin_small"
            android:textSize="@dimen/size_small_brief_id"/>

        <TextView
            android:id="@+id/tvOperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_item"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:textColor="@color/operator_color"
            android:text="over"/>

        <TextView
            android:id="@+id/tvCondition2Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="#6300293"
            android:textColor="@color/main_color_1"
            android:textSize="@dimen/size_item"/>

        <TextView
            android:id="@+id/tvCondition2label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cond_text_entries"
            android:layout_marginLeft="@dimen/margin_small"
            android:textSize="@dimen/size_small_brief_id"/>


    </LinearLayout>
</LinearLayout>