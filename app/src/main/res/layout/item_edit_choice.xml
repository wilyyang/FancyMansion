<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_btn_edit_choice_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_edit_item"
    android:padding="@dimen/padding_item">

    <TextView
        android:id="@+id/tvChoiceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/purple_bold1"
        android:textSize="@dimen/size_item"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvChoiceId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_id"
            android:textSize="@dimen/size_small"/>

        <TextView
            android:id="@+id/tvChoiceEnterCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_edit_item"
            android:background="@drawable/bg_round_lilac"
            android:padding="@dimen/padding_default_edit"
            android:text="@string/book_edit_choice"
            android:textStyle="bold"
            android:textSize="@dimen/size_tiny" />
    </LinearLayout>

</LinearLayout>