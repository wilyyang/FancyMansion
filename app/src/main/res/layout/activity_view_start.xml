<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewStartActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSlideShow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintHeight_percent="0.4">

        <ImageView
            android:id="@+id/imageSlideShowMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_700"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvSlideTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_left"
        android:layout_marginEnd="@dimen/margin_default_right"
        android:layout_marginTop="@dimen/margin_slide_title"
        android:text="타이틀"
        android:textSize="@dimen/size_slide_title"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/layoutSlideShow"
        />

    <ScrollView
        android:id="@+id/scrollSlideContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_slide_detail"
        app:layout_constraintTop_toBottomOf="@id/tvSlideTitle"
        app:layout_constraintBottom_toTopOf="@+id/layoutTail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutSlideContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_left"
            android:layout_marginEnd="@dimen/margin_default_right"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvSlideDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일"
                android:textSize="@dimen/size_slide_detail"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_book"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>