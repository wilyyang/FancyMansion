<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_btn_edit_enter_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_edit_item"
    android:padding="@dimen/padding_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_enter_slide_id"
            android:textSize="@dimen/size_small_brief_id"/>

        <TextView
            android:id="@+id/tvEnterSlideId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choice_not_found_slide"
            android:textSize="@dimen/size_small_brief_id"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEnterSlideTitle"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/purple_bold1"
            android:textSize="@dimen/size_item"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/item_enter_to_enter"
            android:textStyle="bold"
            android:textColor="@color/purple_bold1_alpha"
            android:textSize="@dimen/size_small"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEnterId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_id"
            android:textSize="@dimen/size_small"/>
    </LinearLayout>

</LinearLayout>