<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewReadLoading"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/image_not_found_file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tvSlideEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_not_found_file"
        android:textColor="@color/black"
        android:textSize="@dimen/size_item"
        android:layout_marginTop="@dimen/margin_wide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewReadLoading"/>

</androidx.constraintlayout.widget.ConstraintLayout>