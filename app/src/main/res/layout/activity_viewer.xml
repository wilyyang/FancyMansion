<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSlideShow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintHeight_percent="0.4">

        <ImageView
            android:id="@+id/imageSlideShowMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvSlideTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_left"
        android:layout_marginEnd="@dimen/margin_default_right"
        android:layout_marginTop="@dimen/margin_slide_title"
        android:text="타이틀"
        android:textSize="@dimen/size_slide_title"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/layoutSlideShow"
        />

    <ScrollView
        android:id="@+id/scrollSlideContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_slide_detail"
        app:layout_constraintTop_toBottomOf="@id/tvSlideTitle"
        app:layout_constraintBottom_toTopOf="@+id/layoutTail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutSlideContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_left"
            android:layout_marginEnd="@dimen/margin_default_right"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvSlideDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일디테일"
                android:textSize="@dimen/size_slide_detail"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tvSlideQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_slide_question"
                android:text="질문"
                android:textSize="@dimen/size_slide_question"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvSlideDescription"
                />

            <TextView
                android:id="@+id/tvSlideItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_slide_item"
                android:text="선택 1"
                android:textSize="@dimen/size_slide_item"
                app:layout_constraintTop_toBottomOf="@id/tvSlideQuestion"
                />

            <TextView
                android:id="@+id/tvSlideItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_slide_item"
                android:text="선택 2"
                android:textSize="@dimen/size_slide_item"
                app:layout_constraintTop_toBottomOf="@id/tvSlideItem1"
                />

            <TextView
                android:id="@+id/tvSlideItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_slide_item"
                android:layout_marginBottom="@dimen/margin_slide_item"
                android:text="선택 3"
                android:textSize="@dimen/size_slide_item"
                app:layout_constraintTop_toBottomOf="@id/tvSlideItem2"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>