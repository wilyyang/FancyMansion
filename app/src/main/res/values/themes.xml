<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FancyMansion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_light1</item>
        <item name="colorPrimaryVariant">@color/purple_bold1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_light2</item>
        <item name="colorSecondaryVariant">@color/purple_bold2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="p">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">true</item>

        <item name="radioButtonStyle">@style/customRadioFontStyle</item>
        <item name="materialButtonStyle">@style/customButtonFontStyle</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:alertDialogTheme">@style/customAlertDialogStyle</item>
    </style>

    <style name="customRadioFontStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="customButtonFontStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="customAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_round_white</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
    
    <style name="BookInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>
        <item name="counterEnabled">true</item>
    </style>

    <style name="Theme.FancyMansion.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FancyMansion.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FancyMansion.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>